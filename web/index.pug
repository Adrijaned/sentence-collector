doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Common Voice Sentence Collector
    base(href=process.env.NODE_ENV === 'production' ?
      process.env.CLIENT_URL_PROD : process.env.CLIENT_URL_LOCAL)
    link(rel='shortcut icon' type='image/x-icon' href='./favicon.ico')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans|Zilla+Slab')
  body
    div(
      id='root'
      data-db-url=process.env.NODE_ENV === 'production' ? process.env.KINTO_URL_PROD : process.env.KINTO_URL_LOCAL
      data-backend-url=process.env.NODE_ENV === 'production' ? process.env.BACKEND_URL_PROD : process.env.BACKEND_URL_LOCAL
    )
    script(src='./src/index.jsx')
